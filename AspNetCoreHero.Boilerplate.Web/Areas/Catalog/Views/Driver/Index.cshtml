@{
    ViewData["Title"] = localizer["Drivers"];
    
}
@using AspNetCoreHero.Boilerplate.Web.Areas.Catalog.Models
@model DriverViewModel
<div class="card">
    <div class="col-sm-12" style="padding:20px">

        <a onclick="jQueryModalGet('/catalog/driver/sendinvite','Send Invite')" class="btn bg-primary">
            <i class="fa fa-paper-plane" aria-hidden="true"></i> Send Invite
        </a>
        <a onclick="jQueryModalGet('/catalog/driver/sendinvite','Send Invite')" class="btn bg-secondary text-white">
            <i class="fa fa-filter" aria-hidden="true"></i> Filter
        </a>
        
    </div>
    <div id="viewAll" class="card-body table-responsive">
    </div>
</div>
@section Scripts
    {
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
            $("#DriverTable").DataTable();
            loadData();
            $('#reload').on('click', function () {
                loadData();
            });
        });
        function loadData() {
            $('#viewAll').load('/catalog/Driver/LoadAll');
        }
    </script>
}